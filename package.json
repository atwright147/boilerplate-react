{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "description": "A boilerplate for best practices regarding React, Redux, Webpack and their associated tools.",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack -p --config webpack.config.prod.js",
    "prebuild": "rimraf -g ./dist/**",
    "dev": "webpack-dev-server --config webpack.config.dev.js",
    "dev:stubs": "npm run dev & npm run stubs",
    "stubs": "stubby -d ./stubs/api.yaml --watch",
    "lint": "eslint .",
    "test": "nyc --reporter=html mocha './src/**/*.spec.js' --opts ./mocha.opts"
  },
  "keywords": [],
  "author": "Andy Wright",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-redux-form": "^1.16.14",
    "react-router-dom": "^5.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/redux": "^3.6.0",
    "@types/redux-devtools-extension": "^2.13.2",
    "@types/redux-thunk": "^2.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.8.1",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.4.1",
    "mini-css-extract-plugin": "^0.11.0",
    "postcss": "^7.0.32",
    "postcss-comment": "^2.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "sinon-register": "^1.0.1",
    "stubby": "^5.0.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.3"
